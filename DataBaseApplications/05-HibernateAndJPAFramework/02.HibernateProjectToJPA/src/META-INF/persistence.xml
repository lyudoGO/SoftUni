<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0">

    <!--
        A persistence unit is a set of listed persistent entities as well
        the configuration of an EntityManagerFactory. We configure each
        example in a separate persistence-unit.
    -->
    <persistence-unit name="UniversitySystem">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <!-- We must enumerate each entity in the persistence unit -->
        <class>StudentSystem.Student</class>
        <class>StudentSystem.Course</class>
        <class>StudentSystem.Professor</class>
        <class>StudentSystem.Person</class>
        <class>StudentSystem.Department</class>
        <properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/universitydb" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
		</properties>
    </persistence-unit>

</persistence>